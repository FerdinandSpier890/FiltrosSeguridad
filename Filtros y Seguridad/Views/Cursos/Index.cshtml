@model IEnumerable<Filtros_y_Seguridad.Models.Cursos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/starrr.js"></script>
<link href="~/Content/starrr.css" rel="stylesheet" />
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link href="https://netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" />
<script>
    const cargarRanking = (id, rating) => {
        $(`#${id}`).starrr({
            rating
        });
    }
</script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="page-content">
    <div class="container-fluid">
        <header class="section-header">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>Lista de Cursos</h3>
                        <ol class="breadcrumb breadcrumb-simple">
                            <li><a href="https://localhost:44347/Cursos/Index">Inicio</a></li> |
                            <li class="active">Lista de Cursos</li>
                        </ol>
                    </div>
                </div>
            </div>
        </header>
        <div class="container-fluid py-4">
            <h1 class="text-center"><strong>Cursos</strong></h1>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Imagen</th>
                            <th>Categoría</th>
                            <th>Estado</th>
                            <th>Autor</th>
                            <th>Ranking</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var curso in @Model)
                        {
                            <tr>
                                <td>@curso.Nombre</td>
                                <td>@curso.Descripcion</td>
                                <td>@curso.Precio</td>
                                <td>@curso.ImgUrl</td>
                                <td>@curso.Categorias.Nombre</td>
                                <td>@curso.Status.Nombre</td>
                                <td>@curso.Persona.Nombre</td>
                                <td>
                                    <div id="@curso.Id" style="pointer-events: none;"></div>
                                    <script type="text/javascript">
                                cargarRanking(@curso.Id, @curso.Ranking);
                                    </script>
                                </td>
                                <td>
                                    <div class="btn-group" role="group" style="margin-left: 5px; margin-right: 5px">
                                        <a href="https://localhost:44347/Cursos/Edit/@curso.Id"
                                           class="fa-solid fa-floppy-disk btn btn-rounded btn-inline" style="background-color: #146B63; color: white">Editar</a>
                                        <a href="https://localhost:44347/Cursos/Delete/@curso.Id"
                                           class="btn btn-danger">Eliminar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
